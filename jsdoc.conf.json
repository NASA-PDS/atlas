{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc", "closure"]
    },
    "source": {
        "include": ["src"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": ["plugins/markdown", "better-docs/component"],
    "templates": {
        "better-docs": {
            "name": "My React components",
            "component": {
                "wrapper": "./src/other/docExampleWrapper.js"
            }
        }
    },
    "opts": {
        "destination": "docs",
        "recurse": true,
        "readme": "README.md",
        "template": "better-docs",
        "tutorials": "tutorials",
        "verbose": true
    }
}
